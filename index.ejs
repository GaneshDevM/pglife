<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome | PG Life</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="\css\common.css">
    <link rel="stylesheet" href="\css\home.css">
</head>

<body>
    <div>
        <% if(logged){ %>
            <%- include('signed_header.ejs') %>
        <%}else { %>
            <%- include('unsigned_header.ejs') %>
        <%} %>
        <div id="searchpanel">
            <div class="img-container">
                <img id="bg-img" src="/img/bg.png" width="100%" alt="background img">
            </div>
            <div id="tag" class="col-8">
                <h1 style="color: white;">Happiness per Square Foot</h1>
                <form method="get" action="/search">
                    <input type="text" name="citySearch" id="citySearch"
                        placeholder=" Enter your city to search for PGs"><button type="submit" id="search-btn"><img
                            src="/img/search.png" height="22px" alt="search button"></button>
                </form>
                <script>
                    if(window.screen.width<400)
                    document.getElementById('citySearch').setAttribute("placeholder","search City");
                </script>
            </div>
        </div>
    </div>

    <div class="site-info">
        <h1 class="text-center">Major Cities</h1>
        <ul>
            <li><a href="/pg/delhi"><img class="mcities" src="/img/delhi.png" width="150px"></a></li>
            <li><a href="/pg/mumbai"><img class="mcities" src="/img/mumbai.png" width="150px"></a></li>
            <li><a href="/pg/banglore"><img class="mcities" src="/img/bangalore.png" width="150px"></a></li>
            <li><a href="/pg/hyderabad"><img class="mcities" src="/img/hyderabad.png" width="150px"></a></li>
        </ul>
        <%- include('footer.ejs') %>
    </div>

</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
<script src="/js/index.js"></script>

</html>