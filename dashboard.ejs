    <h2 style="font-family:  Times, serif; text-align: center;">My Intrested Properties</h2>
    <div class="container" id="card-holder">
            <% if(info){%>
            <% for (var i=0; i < info.length; i++) { %>
                <%- include('card.ejs',info[i]) %>
            <% } %>
